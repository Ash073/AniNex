{
  "expo": {
    "name": "AniNeX",
    "slug": "aninex",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/AniNex (1).png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "scheme": "aninex",

    "splash": {
      "image": "./assets/logo/AniNex (1).png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },

    "updates": {
      "url": "https://u.expo.dev/fbb8db22-e484-4526-add1-fe80a4fbcdb5"
    },

    "runtimeVersion": {
      "policy": "appVersion"
    },

    "ios": {
      "bundleIdentifier": "com.aninex.app",
      "supportsTablet": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Allow AniNeX to access your camera.",
        "NSPhotoLibraryUsageDescription": "Allow AniNeX to access your photos.",
        "NSUserTrackingUsageDescription": "Used for improving user experience."
      }
    },

    "android": {
      "package": "com.aninex.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/AniNex (1).png",
        "backgroundColor": "#000000"
      },

      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "POST_NOTIFICATIONS"
      ],

      "usesFeature": [
        {
          "name": "android.hardware.camera",
          "required": false
        },
        {
          "name": "android.hardware.camera.ar",
          "required": false
        }
      ],

      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/logo/AniNex (1).png"
    },

    "plugins": [
      "expo-router",
      "expo-web-browser",
      "expo-font",
      "expo-image-picker",
      "expo-notifications",
      "expo-secure-store"
    ],

    "extra": {
      "expoPublicApiUrl": "https://aninex-1.onrender.com",
      "router": {},
      "eas": {
        "projectId": "fbb8db22-e484-4526-add1-fe80a4fbcdb5"
      }
    }
  }
}